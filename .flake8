[flake8]
max-line-length = 88
extend-ignore = E203, W503, E501
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    node_modules,
    dist,
    build,
    .pytest_cache,
    .coverage,
    htmlcov,
    .tox,
    .mypy_cache,
    .DS_Store,
    *.egg-info
per-file-ignores =
    # Ignore import errors in test files
    __tests__/*:F401
    test_*.py:F401
    # Ignore line length in test files
    __tests__/*:E501
    test_*.py:E501
    # Ignore module level imports in test files (needed for sys.path setup)
    __tests__/*:E402
    test_*.py:E402
    # Ignore line length in content creation files
    services/content-creation/src/__tests__/*:E501
    services/content-creation/test_*.py:E501
