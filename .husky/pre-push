#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🚀 Running lightweight pre-push checks..."

# 1️⃣ Lint all TypeScript/JS files
echo "📝 Linting code..."
npm run lint

# 2️⃣ Prettier format check
echo "🎨 Checking code formatting..."
npm run prettier:check

echo "✅ Lightweight pre-push checks completed!"
