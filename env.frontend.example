# =============================================================================
# QYLON FRONTEND - ENVIRONMENT CONFIGURATION
# =============================================================================
# Environment variables for the React/Next.js frontend application
# =============================================================================

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Qylon AI Platform
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# API CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000
NEXT_PUBLIC_API_GATEWAY_URL=http://localhost:3000
NEXT_PUBLIC_API_TIMEOUT=30000

# Service URLs
NEXT_PUBLIC_USER_MANAGEMENT_URL=http://localhost:3001
NEXT_PUBLIC_CLIENT_MANAGEMENT_URL=http://localhost:3002
NEXT_PUBLIC_MEETING_INTELLIGENCE_URL=http://localhost:3003
NEXT_PUBLIC_CONTENT_CREATION_URL=http://localhost:3004
NEXT_PUBLIC_WORKFLOW_AUTOMATION_URL=http://localhost:3005
NEXT_PUBLIC_INTEGRATION_MANAGEMENT_URL=http://localhost:3006
NEXT_PUBLIC_NOTIFICATION_SERVICE_URL=http://localhost:3007
NEXT_PUBLIC_ANALYTICS_REPORTING_URL=http://localhost:3008

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
NEXT_PUBLIC_JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
NEXT_PUBLIC_AUTH_DOMAIN=localhost:3000
NEXT_PUBLIC_AUTH_CALLBACK_URL=http://localhost:3000/auth/callback

# OAuth Providers
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
NEXT_PUBLIC_MICROSOFT_CLIENT_ID=your-microsoft-client-id
NEXT_PUBLIC_GITHUB_CLIENT_ID=your-github-client-id

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here
NEXT_PUBLIC_SUPABASE_REDIRECT_URL=http://localhost:3000/auth/callback

# =============================================================================
# AI SERVICES (Client-side)
# =============================================================================
NEXT_PUBLIC_OPENAI_API_KEY=sk-your-openai-api-key-here
NEXT_PUBLIC_ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# =============================================================================
# VIDEO & MEETING SERVICES
# =============================================================================
NEXT_PUBLIC_ZOOM_CLIENT_ID=your-zoom-client-id
NEXT_PUBLIC_GOOGLE_MEET_CLIENT_ID=your-google-meet-client-id
NEXT_PUBLIC_TEAMS_CLIENT_ID=your-teams-client-id

# =============================================================================
# CLOUD STORAGE
# =============================================================================
NEXT_PUBLIC_DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
NEXT_PUBLIC_DO_SPACES_BUCKET=qylon-storage
NEXT_PUBLIC_DO_SPACES_REGION=nyc3

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_GA_TRACKING_ID=GA-XXXXXXXXX
NEXT_PUBLIC_HOTJAR_ID=your-hotjar-id

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_ENABLE_AI_CONTENT_GENERATION=true
NEXT_PUBLIC_ENABLE_MEETING_RECORDING=true
NEXT_PUBLIC_ENABLE_WORKFLOW_AUTOMATION=true
NEXT_PUBLIC_ENABLE_REAL_TIME_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS_DASHBOARD=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================
NEXT_PUBLIC_THEME_PRIMARY_COLOR=#3B82F6
NEXT_PUBLIC_THEME_SECONDARY_COLOR=#1E40AF
NEXT_PUBLIC_THEME_ACCENT_COLOR=#F59E0B
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_SUPPORTED_LANGUAGES=en,es,fr,de

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_LOG_LEVEL=debug
NEXT_PUBLIC_MOCK_API=false
NEXT_PUBLIC_OFFLINE_MODE=false

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=true
NEXT_PUBLIC_CACHE_TTL=3600
NEXT_PUBLIC_MAX_FILE_SIZE=10485760

# =============================================================================
# NOTIFICATIONS
# =============================================================================
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key
NEXT_PUBLIC_NOTIFICATION_SOUND=true
NEXT_PUBLIC_NOTIFICATION_VIBRATION=true
