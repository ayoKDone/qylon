# =============================================================================
# QYLON AI AUTOMATION PLATFORM - LOCAL DEVELOPMENT ENVIRONMENT
# =============================================================================
# This file contains all environment variables needed for local development
# Copy this file to .env and fill in your actual values
# =============================================================================

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================
NODE_ENV=development
DEBUG=true
LOG_LEVEL=debug

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database (Primary Database)
DATABASE_URL=postgresql://postgres:password@localhost:5432/qylon_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=qylon_dev
DATABASE_USER=postgres
DATABASE_PASSWORD=password

# Supabase Configuration (Backend-as-a-Service)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here
SUPABASE_JWT_SECRET=your-supabase-jwt-secret-here

# MongoDB (Analytics & Reporting)
MONGODB_URL=mongodb://localhost:27017/qylon_analytics
MONGODB_DATABASE=qylon_analytics

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=your-32-character-encryption-key-here
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# VIDEO & MEETING SERVICES
# =============================================================================
# Recall.ai Configuration
RECALL_AI_API_KEY=your-recall-ai-api-key-here
RECALL_AI_BASE_URL=https://us-east-1.recall.ai

# Zoom Integration
ZOOM_CLIENT_ID=your-zoom-client-id
ZOOM_CLIENT_SECRET=your-zoom-client-secret
ZOOM_REDIRECT_URI=http://localhost:3000/auth/zoom/callback

# Google Meet Integration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Microsoft Teams Integration
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=http://localhost:3000/auth/microsoft/callback

# =============================================================================
# CLOUD STORAGE & CDN
# =============================================================================
# DigitalOcean Spaces Configuration
DO_API_TOKEN=your-digitalocean-api-token
DO_SPACES_KEY=your-spaces-access-key
DO_SPACES_SECRET=your-spaces-secret-key
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
DO_SPACES_BUCKET=qylon-storage
DO_SPACES_REGION=nyc3

# AWS S3 (Alternative)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=qylon-storage

# =============================================================================
# EMAIL & NOTIFICATIONS
# =============================================================================
# SendGrid Configuration
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
FROM_EMAIL=noreply@qylon.ai
FROM_NAME=Qylon AI Platform

# Twilio Configuration (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
SLACK_CHANNEL=#qylon-notifications

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Sentry Configuration
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Prometheus Configuration
PROMETHEUS_PORT=9090
PROMETHEUS_ENDPOINT=http://localhost:9090

# Google Analytics
GA_TRACKING_ID=GA-XXXXXXXXX

# =============================================================================
# SERVICE PORTS CONFIGURATION
# =============================================================================
# API Gateway
API_GATEWAY_PORT=3000
API_GATEWAY_HOST=localhost

# Microservices Ports
USER_MANAGEMENT_PORT=3001
CLIENT_MANAGEMENT_PORT=3002
MEETING_INTELLIGENCE_PORT=3003
CONTENT_CREATION_PORT=3004
WORKFLOW_AUTOMATION_PORT=3005
INTEGRATION_MANAGEMENT_PORT=3006
NOTIFICATION_SERVICE_PORT=3007
ANALYTICS_REPORTING_PORT=3008

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Test Database
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/qylon_test
TEST_REDIS_URL=redis://localhost:6379/1

# Mock Services (for development)
MOCK_AI_SERVICES=false
MOCK_VIDEO_SERVICES=false
MOCK_EMAIL_SERVICES=false

# =============================================================================
# EXTERNAL API INTEGRATIONS
# =============================================================================
# CRM Integrations
HUBSPOT_API_KEY=your-hubspot-api-key
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret

# Calendar Integrations
GOOGLE_CALENDAR_API_KEY=your-google-calendar-api-key
OUTLOOK_CLIENT_ID=your-outlook-client-id
OUTLOOK_CLIENT_SECRET=your-outlook-client-secret

# =============================================================================
# SECURITY & COMPLIANCE
# =============================================================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
SECURITY_HEADERS=true
HELMET_ENABLED=true

# Content Security Policy
CSP_REPORT_URI=https://your-domain.com/csp-report

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_AI_CONTENT_GENERATION=true
ENABLE_MEETING_RECORDING=true
ENABLE_WORKFLOW_AUTOMATION=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_ANALYTICS_DASHBOARD=true

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/var/backups/qylon

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================
# Caching
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/qylon
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_COMPRESS=true
