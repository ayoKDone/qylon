# =============================================================================
# QYLON AI AUTOMATION PLATFORM - PRODUCTION ENVIRONMENT
# =============================================================================
# Production environment configuration following Universal Design Rules
# Copy this file to .env.production and fill in your actual values
# =============================================================================

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================
NODE_ENV=production
DEBUG=false
LOG_LEVEL=info

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Production PostgreSQL Database
DATABASE_URL=postgresql://username:password@host:5432/qylon_production
DATABASE_HOST=your-production-db-host
DATABASE_PORT=5432
DATABASE_NAME=qylon_production
DATABASE_USER=your-production-db-user
DATABASE_PASSWORD=your-production-db-password
DATABASE_SSL=true

# Supabase Production Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-production-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-supabase-service-role-key
SUPABASE_JWT_SECRET=your-production-supabase-jwt-secret

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://your-production-redis-host:6379
REDIS_PASSWORD=your-production-redis-password
REDIS_HOST=your-production-redis-host
REDIS_PORT=6379

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-super-secure-jwt-secret-for-production-32-chars-min
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Production CORS Configuration (NO localhost, NO wildcards)
CORS_ORIGIN=https://qylon.ai,https://www.qylon.ai,https://api.qylon.ai

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================
OPENAI_API_KEY=sk-your-production-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000

ANTHROPIC_API_KEY=sk-ant-your-production-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# VIDEO & MEETING SERVICES
# =============================================================================
RECALL_AI_API_KEY=your-production-recall-ai-api-key
RECALL_AI_BASE_URL=https://us-east-1.recall.ai

# =============================================================================
# CLOUD STORAGE & CDN
# =============================================================================
DO_API_TOKEN=your-production-digitalocean-api-token
DO_SPACES_KEY=your-production-spaces-access-key
DO_SPACES_SECRET=your-production-spaces-secret-key
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
DO_SPACES_BUCKET=qylon-production-storage
DO_SPACES_REGION=nyc3

# =============================================================================
# EMAIL & NOTIFICATIONS
# =============================================================================
SENDGRID_API_KEY=SG.your-production-sendgrid-api-key
FROM_EMAIL=noreply@qylon.ai
FROM_NAME=Qylon AI Platform

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id
PROMETHEUS_PORT=9090
PROMETHEUS_ENDPOINT=https://monitoring.qylon.ai

# =============================================================================
# SERVICE PORTS CONFIGURATION
# =============================================================================
API_GATEWAY_PORT=3000
USER_MANAGEMENT_PORT=3001
CLIENT_MANAGEMENT_PORT=3002
MEETING_INTELLIGENCE_PORT=3003
CONTENT_CREATION_PORT=3004
WORKFLOW_AUTOMATION_PORT=3005
INTEGRATION_MANAGEMENT_PORT=3006
NOTIFICATION_SERVICE_PORT=3007
ANALYTICS_REPORTING_PORT=3008

# =============================================================================
# SECURITY & COMPLIANCE
# =============================================================================
SECURITY_HEADERS=true
HELMET_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/qylon
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_COMPRESS=true
