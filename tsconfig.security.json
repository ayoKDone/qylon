{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["./shared/*"],
      "@services/*": ["./services/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "**/tests/**",
    "cypress.config.ts",
    "services/api-gateway/**",
    "services/event-sourcing/**"
  ]
}
